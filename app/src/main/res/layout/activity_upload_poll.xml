<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UploadPollActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Create Poll"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:background="@drawable/heading_bg"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/poll_icon"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_color"
        android:layout_marginTop="2dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Question"
        android:textColor="#7F7E7E"/>
    <EditText
        android:id="@+id/pollQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="150dp"
        android:textColor="@color/black"
        android:hint="Write Question Here..."
        android:paddingStart="10dp"
        android:textSize="18sp"
        android:textColorHint="@color/gray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textColor="#7F7E7E"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
        <EditText
            android:id="@+id/pollOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/gray"/>
        <EditText
            android:id="@+id/pollOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 2"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/gray"/>
        <LinearLayout
            android:id="@+id/option3layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
           >
        <EditText
            android:id="@+id/pollOption3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Option 3"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/gray"/>
            <ImageView
                android:id="@+id/option3Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="7dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/option4layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
           >
            <EditText
                android:id="@+id/pollOption4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 4"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:backgroundTint="@color/gray"/>
            <ImageView
                android:id="@+id/option4Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/option5layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
        >
            <EditText
                android:id="@+id/pollOption5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 5"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:backgroundTint="@color/gray"/>
            <ImageView
                android:id="@+id/option5Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="7dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/option6layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
           >
            <EditText
                android:id="@+id/pollOption6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 6"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:backgroundTint="@color/gray"/>
            <ImageView
                android:id="@+id/option6Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="7dp"/>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/sixoptionWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="maximum six options allowed"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="#F60909"/>
        <TextView
            android:id="@+id/addOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Add"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@color/gray"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/baseline_image_24"
                app:tint="@color/primary_color" />
    <TextView
        android:id="@+id/uploadPollAddImagesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Images"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
          >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/youtube_btn"/>
            <TextView
                android:id="@+id/uploadPollAddYoutubeVideosBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Video Link"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <EditText
        android:id="@+id/uploadPollYoutubeVideoLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Paste Youtube video link here..."
        android:textColorHint="@color/gray"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/uploadPollAddImageViewPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"/>
<androidx.cardview.widget.CardView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
>
    <TextView
        android:id="@+id/uploadPoll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:text="Upload"
        android:textSize="23sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>