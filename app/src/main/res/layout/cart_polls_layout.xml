<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/pollMainLayout"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:padding="3dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/pollLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        android:visibility="gone"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ProgressBar
            android:id="@+id/pollProgressbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="?android:progressBarStyleHorizontal"
            android:progress="20"
            android:progressDrawable="@drawable/polls_bg"
            />
        <TextView
            android:id="@+id/pollOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="first option"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            />
        <TextView
            android:id="@+id/pollPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/pollLayoutOfUnpolled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="5dp"
android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical">
            <ProgressBar
                android:id="@+id/pollProgressbarOfUnpolled"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="?android:progressBarStyleHorizontal"
                android:progress="20"
                android:progressDrawable="@drawable/secondary_poll_bg"
                />
            <TextView
                android:id="@+id/pollOptionOfUnpolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="first option"
                android:textSize="18sp"
                android:maxWidth="200dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                />
            <TextView
                android:id="@+id/pollPercentageOfUnpolled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<TextView
    android:id="@+id/unpolledPollLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:textColor="@color/black"
    android:text="first Option"
    android:background="@drawable/poll_unpolled_bg"
    android:gravity="center"
    android:textSize="18sp"
    android:padding="5dp"/>

</LinearLayout>